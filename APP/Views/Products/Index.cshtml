@model  List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="AddProduct" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Add New Product    
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <tr>
        
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach(var obj in Model)
    {
    <tr>
        <td>@obj.Name</td>
        <td>@obj.Description</td>
        <td>@obj.Price</td>
        <td>
            <div class="w-75 btn-group" role="group">
                <a asp-controler="Products" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil-square"></i>
                    Edit
                </a>
                        <a asp-controler="Products" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                    <i class="bi bi-trash-fill"></i>
                    Delete
                </a>
            </div>
        </td>
    </tr>
    }
</table>
</div>